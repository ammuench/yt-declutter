{
	"name": "yt-hide-junk-recommendations",
	"version": "1.0.0",
	"description": "Firefox/Chrome extension to hide unwanted content on YouTube",
	"scripts": {
		"build": "pnpm run build:firefox && pnpm run build:chrome",
		"build:firefox": "vite build --config vite.config.firefox.ts",
		"build:chrome": "vite build --config vite.config.chrome.ts",
		"dev": "vite build --watch --config vite.config.firefox.ts",
		"clean": "rm -rf dist",
		"dev:firefox": "web-ext run --source-dir dist/firefox --start-url https://www.youtube.com",
		"prepare": "husky",
		"check-types": "tsc --noEmit"
	},
	"packageManager": "pnpm@10.14.0",
	"devDependencies": {
		"@biomejs/biome": "2.2.4",
		"@types/chrome": "^0.0.268",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.6",
		"typescript": "^5.0.0",
		"vite": "^5.0.0",
		"web-ext": "^8.9.0"
	}
}
