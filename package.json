{
	"name": "yt-declutter",
	"version": "0.1.0",
	"description": "Firefox/Chrome extension to declutter YouTube by hiding unwanted content",
	"license": "MIT",
	"homepage": "https://github.com/ammuench/yt-declutter",
	"repository": {
		"type": "git",
		"url": "https://github.com/ammuench/yt-declutter.git"
	},
	"scripts": {
		"build": "pnpm run build:firefox && pnpm run build:chrome",
		"build:firefox": "vite build --config vite.config.firefox.ts",
		"build:chrome": "vite build --config vite.config.chrome.ts",
		"dev": "vite build --watch --config vite.config.firefox.ts",
		"clean": "rm -rf dist",
		"dev:firefox": "web-ext run --source-dir dist/firefox --start-url https://www.youtube.com",
		"prepare": "husky",
		"check-types": "tsc --noEmit",
		"test": "vitest",
		"test:run": "vitest run",
		"test:coverage": "vitest run --coverage",
		"test:ui": "vitest --ui"
	},
	"packageManager": "pnpm@10.14.0",
	"devDependencies": {
		"@biomejs/biome": "2.2.4",
		"@types/chrome": "^0.0.268",
		"@vitest/coverage-v8": "^3.2.4",
		"@vitest/ui": "3.2.4",
		"husky": "^9.1.7",
		"jsdom": "^26.1.0",
		"lint-staged": "^16.1.6",
		"typescript": "^5.0.0",
		"vite": "^5.0.0",
		"vitest": "^3.2.4",
		"web-ext": "^8.9.0"
	}
}
