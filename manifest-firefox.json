{
	"manifest_version": 2,
	"name": "YouTube Hide Junk Recommendations",
	"version": "1.0.0",
	"description": "Hide unwanted content on YouTube",

	"permissions": ["*://www.youtube.com/*", "*://youtube.com/*"],

	"content_scripts": [
		{
			"matches": ["*://www.youtube.com/*", "*://youtube.com/*"],
			"js": ["content.js"],
			"css": ["content.css"],
			"run_at": "document_start"
		}
	],

	"web_accessible_resources": ["content.css"]
}
