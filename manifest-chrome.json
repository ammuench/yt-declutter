{
	"manifest_version": 3,
	"name": "YT Declutter",
	"version": "0.1.1",
	"description": "Declutter YouTube by hiding unwanted content",
	"homepage_url": "https://github.com/ammuench/yt-declutter",

	"icons": {
		"16": "icon-16.png",
		"48": "icon-48.png",
		"128": "icon-128.png"
	},

	"host_permissions": ["*://www.youtube.com/*", "*://youtube.com/*"],

	"content_scripts": [
		{
			"matches": ["*://www.youtube.com/*", "*://youtube.com/*"],
			"exclude_matches": [
				"*://www.youtube.com/results*",
				"*://youtube.com/results*"
			],
			"js": ["content.js"],
			"css": ["content.css"],
			"run_at": "document_start"
		}
	]
}
